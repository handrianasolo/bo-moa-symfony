{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
		<!-- container-fluid -->
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<h3 class="text-secondary">
                        <i class="fas fa-file-upload"></i> Mise à jour
					</h3>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
    </div>
    <!-- Main content -->
    <div class="content">
        <!-- tickets reseaux -->
        <div class="container-fluid">
            <div class="row">
				<div class="col-12">
					<h4 class="text-secondary">
						<i class="fas fa-wifi nav-icon"></i> Tickets réseaux
					</h4>
				</div>
			</div>
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-container card-outline card-primary">
                        <div class="card-header d-flex">
                            <h3 class="card-title m-auto">
                                <strong>Tickets Proxi Ouverts (Fichier Excel)</strong>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body card-content">
                            <form method="post" action="{{path('home')}}" enctype="multipart/form-data">
                                <div class="input-group">
                                    {{form_widget(excelReseauForm.file)}}
                                    <div class="input-group-append">
                                        <button class="btn btn-default" type="submit">
                                            <i class="fas fa-upload"></i> Traiter
                                        </button>
                                    </div>
                                </div>
                                {{form_rest(excelReseauForm)}}
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.card -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-container card-outline card-primary">
                        <div class="card-header d-flex">
                            <h3 class="card-title m-auto">
                                <strong>Dernière mise à jour</strong>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        {% if lastUpdatedDateReseau[0]["maxDate"] is same as("now"|date("d/m/Y")) %}
                        <div class="card-body card-content bg-primary d-flex">
                            <h2 class="m-auto">
                                <b>{{"now"|date("d/m/Y")}}</b>
                            </h2>
                        </div>
                        {% else %}
                        <div class="card-body card-content bg-light d-flex">
                            <h2 class="m-auto">
                                <b>{{lastUpdatedDateReseau[0]["maxDate"]}}</b>
                            </h2>
                        </div>
                        {% endif %}
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <!-- opened tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-danger">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if openedTickets|length > 0 %}
                                                <h3>{{openedTickets|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets ouverts</p>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- treated tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-success">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if treatedTickets|length > 0 %}
                                                <h3>{{treatedTickets|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets traités</p>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- closed tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-warning">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if closedTickets|length > 0 %}
                                                <h3>{{closedTickets|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets à clôturer</p>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- tickets ibm -->
        <div class="container-fluid">
            <div class="row">
				<div class="col-12">
					<h4 class="text-secondary pull-right">
						<i class="fas fa-ticket-alt nav-icon"></i> Tickets IBM
					</h4>
				</div>
			</div>
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-container card-outline card-primary">
                        <div class="card-header d-flex">
                            <h3 class="card-title m-auto">
                                <strong>Tickets IBM Ouverts (Fichier Excel)</strong>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body card-content">
                        <form method="post" action="{{path('home')}}" enctype="multipart/form-data">
                            <div class="input-group">
                                {{form_widget(excelIbmForm.file)}}
                                <div class="input-group-append">
                                    <button class="btn btn-default" type="submit">
                                        <i class="fas fa-upload"></i> Traiter
                                    </button>
                                </div>
                            </div>
                            {{form_rest(excelIbmForm)}}
                        </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.card -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-container card-outline card-primary">
                        <div class="card-header d-flex">
                            <h3 class="card-title m-auto">
                                <strong>Dernière mise à jour</strong>
                            </h3>
                        </div>
                        <!-- /.card-header -->
                        {% if lastUpdatedDateIbm[0]["maxDate"] is same as("now"|date("d/m/Y")) %}
                        <div class="card-body card-content bg-primary d-flex">
                            <h2 class="m-auto">
                                <b>{{"now"|date("d/m/Y")}}</b>
                            </h2>
                        </div>
                        {% else %}
                        <div class="card-body card-content bg-light d-flex">
                            <h2 class="m-auto">
                                <b>{{lastUpdatedDateIbm[0]["maxDate"]}}</b>
                            </h2>
                        </div>
                        {% endif %}
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <!-- high impact tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-danger">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if impactHigh|length > 0 %}
                                                <h3>{{impactHigh|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets non résolus</p>  
                                                <p class="txt-info">Impact élevé</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- medieum impact tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-success">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if impactMedium|length > 0 %}
                                                <h3>{{impactMedium|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets non résolus</p>  
                                                <p class="txt-info">Impact moyen</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- low impact tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-warning">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if impactLow|length > 0 %}
                                                <h3>{{impactLow|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets non résolus</p>  
                                                <p class="txt-info">Impact faible</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- high urgence tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-danger">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if urgenceHigh|length > 0 %}
                                                <h3>{{urgenceHigh|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets non résolus</p>  
                                                <p class="txt-info">Urgence élevée</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- medium urgence tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-success">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if urgenceMedium|length > 0 %}
                                                <h3>{{urgenceMedium|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets non résolus</p>
                                                <p class="txt-info">Urgence moyenne</p>  
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- low urgence tickets -->
                                <div class="col-lg-4">
                                    <div class="small-box bg-warning">
                                        <div class="inner">
                                            <div class="infos">
                                                {% if urgenceLow|length > 0 %}
                                                <h3>{{urgenceLow|length}}</h3>
                                                {% else %}
                                                <h3>0</h3>
                                                {% endif %}
                                                <p class="txt-info">Tickets non résolus</p>  
                                                <p class="txt-info">Urgence faible</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content -->
{% endblock %}
