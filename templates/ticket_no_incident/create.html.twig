{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block javascripts %}
    <!-- Datepicker configuration -->
    <script src="{{ asset('dist/js/pages/datepicker.js')}}"></script>
{% endblock %}

{% block body %}
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    {{ form_start(noIncidentForm) }}
                    <div class="card card-success">
                        <div class="card-header d-flex">
                            <h3 class="card-title m-auto">Enregistrement d'un magasin sans incident ( Kit-4G installé )</h3>
                        </div>
                        <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Nom du magasin</label>
                                        {{form_widget(noIncidentForm.nomMagasin)}}
                                        <span class="error text-danger">
                                            {{form_errors(noIncidentForm.nomMagasin)}}
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Code du magasin</label>
                                        {{form_widget(noIncidentForm.codeMagasin)}}
                                        <span class="error text-danger">
                                            {{form_errors(noIncidentForm.codeMagasin)}}
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Code géode</label>
                                        {{form_widget(noIncidentForm.codeGeode)}}
                                        <span class="error text-danger">
                                            {{form_errors(noIncidentForm.codeGeode)}}
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Ville</label>
                                        {{form_widget(noIncidentForm.ville)}}
                                        <span class="error text-danger">
                                            {{form_errors(noIncidentForm.ville)}}
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>N° Kit-4G</label>
                                        {{form_widget(noIncidentForm.nKit)}}
                                        <span class="error text-danger">
                                            {{form_errors(noIncidentForm.nKit)}}
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Date de mise en place</label>
                                        <div class="input-group input-daterange">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                            </div>
                                            {{form_widget(noIncidentForm.dateInstall)}}
                                        </div>
                                        <span class="error text-danger">
                                            {{form_errors(noIncidentForm.dateInstall)}}
                                        </span>
                                    </div>
                                </div>	
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <label>Commentaire</label>
                                        {{form_widget(noIncidentForm.commentaire)}}
                                        <span class="error text-danger">
                                            {{form_errors(noIncidentForm.commentaire)}}
                                        </span>                                 
                                    </div>
                                </div>
                        </div>
                        <div class="card-footer d-flex">
                            <button type="submit" class="btn btn-success m-auto">
                                <i class="fas fa-plus-circle"></i> Ajouter
                            </button>
                            {{ form_rest(noIncidentForm) }}
                        </div>
                    </div>
                    {{ form_end(noIncidentForm) }}
                </div>
            </div>
        </div>
    </div>
    <!-- /.content -->
{% endblock %}